<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kryx07.intents2.IntentActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/phone_number_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_number"
            android:inputType="phone"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_input_layout"
        android:text="@string/call_button_text" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/call_button"
        android:text="@string/take_a_picture" />


    <TextView
        android:id="@+id/second_activity_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_button"
        android:text="@string/second_activity_says_nothing_yet" />

    <Button
        android:id="@+id/second_activity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_activity_result"
        android:text="@string/second_activity_button_text" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_activity_button"
        android:text="Empty" />

    <Button
        android:id="@+id/service_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown"
        android:text="@string/start_countdown" />

    <TextView
        android:id="@+id/countdown2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_start_button"
        android:text="Empty" />

    <Button
        android:id="@+id/service_start_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown2"
        android:text="@string/start_countdown_bound" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/service_start_button"
        android:contentDescription="@string/picture_content_desc" />


</RelativeLayout>
